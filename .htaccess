#Custom errors
ErrorDocument 404 /PHP-OO-Template/error_404.php
ErrorDocument 403 /PHP-OO-Template/error_404.php

#Prevent viewing of the folders contents
Options -Indexes

#Prevent viewing of .htaccess file
<Files .htaccess>
order allow,deny
deny from all
</Files>

#Rewrite the URLs
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteRule ^([a-zA-Z0-9-]*)/?$ index.php?one=$1 [QSA,L]
</IfModule>
